@model openCaseMaster.ViewModels.ChangeNameModel

@using (Html.BeginForm("ChangeName", "User", FormMethod.Post, new { @class = "form-horizontal", id = "ChangeNameForm" }))
{

    <div>编辑姓名</div>
    <hr />
    <div class="form-group">
        @Html.LabelFor(m => m.name, new { @class = "col-md-3 control-label" })

        <div class="col-sm-9">

            @Html.TextBoxFor(m => m.name, new { @class = "form-control" })
            @Html.ValidationMessageFor(m => m.name, "", new { @class = "text-danger" })

        </div>
    </div>

    <div class="form-group">
        <div class="col-md-offset-3 col-md-8">
            <input type="submit" value="修改姓名" class="btn btn-default pull-right" />
        </div>
    </div>
}

