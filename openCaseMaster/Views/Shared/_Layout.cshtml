       <a  href="/Device/deviceView?menu=deviceViewMenu">设备详情 </a> 
      </div>
    </div>
  </div>

     <div class="panel panel-default">
    <div class="panel-heading">
      <h4 class="panel-title">
        <a data-toggle="collapse" data-parent="#accordion" 
          href="#downloadMenu">
          执行端管理
        </a>
      </h4>
    </div>
    <div id="downloadMenu" class="panel-collapse collapse">
      <div class="panel-body">
       <a  target="_blank" href="~/调试客户端.rar">下载客户端 </a> 
      </div>
    </div>
  </div>
</div>

	  </div>
	  <!--/Test -->
     <script src="~/Scripts/BootSideMenu.js"></script>
